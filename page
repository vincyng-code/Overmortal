<body>
    <header>
        <h1>關聯式經驗值計算器</h1>
    </header>
    
    <div class="container">
        <div class="conversion-info">
            <h3><i class="fas fa-exchange-alt"></i>經驗轉換規則</h3>
            <ul>
                <li>8秒 = 1周天 = <span id="customExpDisplay">1.00</span> 經驗</li>
                <li>1分鐘 = 7.5周天 = <span id="minuteExpDisplay">7.50</span> 經驗</li>
                <li>1小時 = 450周天 = <span id="hourExpDisplay">450.00</span> 經驗</li>
            </ul>
        </div>
        
                <div class="input-group">
                    <label for="customExp">自定義經驗值（1周天）</label>
                    <input type="number" id="customExp" min="0.01" step="0.01" value="1.00" oninput="updateAllCalculations()">
                </div>

        <div class="card-container">
            <div class="card">
                <h2><i class="fas fa-clock"></i>時間 → 經驗值</h2>

                <div class="input-group">
                    <label for="hours">小時</label>
                    <input type="number" id="hours" min="0" value="0" oninput="updateAllCalculations()">
                </div>
                <div class="input-group">
                    <label for="minutes">分鐘</label>
                    <input type="number" id="minutes" min="0" value="0" oninput="updateAllCalculations()">
                </div>
                <div class="input-group">
                    <label for="seconds">秒數</label>
                    <input type="number" id="seconds" min="0" value="0" oninput="updateAllCalculations()">
                </div>
                
                <div class="result">
                    <h3><i class="fas fa-calculator"></i>可獲得經驗值</h3>
                    <p class="result-value" id="totalExp">0.00</p>
                </div>
            </div>
            
            <div class="card">
                <h2><i class="fas fa-bullseye"></i>經驗值 → 時間</h2>
                <div class="input-group">
                    <label for="targetExp">目標經驗值</label>
                    <input type="number" id="targetExp" min="0.01" step="0.01" value="0.00" oninput="updateTimeFromExp()">
                </div>
                
                <div class="result">
                    <h3><i class="fas fa-hourglass-half"></i>所需時間</h3>
                    <p class="result-value" id="requiredTime">0小時 0分鐘 0秒</p>
                </div>
                
             </div>
        </div>
        
        <div class="sync-notice">
            <i class="fas fa-info-circle"></i> 兩個計算區域已關聯，修改任一區域的數據，另一區域會自動更新
        </div>
        
        <p class="decimal-note">所有計算結果精確到小數點後2位</p>
    </div>

    <script>
        // 更新转换规则显示
        function updateConversionRules() {
            const customExp = parseFloat(document.getElementById('customExp').value) || 1.00;
            document.getElementById('customExpDisplay').textContent = customExp.toFixed(2);
            document.getElementById('minuteExpDisplay').textContent = (customExp * 7.5).toFixed(2);
            document.getElementById('hourExpDisplay').textContent = (customExp * 450).toFixed(2);
        }
        
        // 根据时间计算经验值
        function calculateExpFromTime() {
            const customExp = parseFloat(document.getElementById('customExp').value) || 1.00;
            const hours = parseFloat(document.getElementById('hours').value) || 0;
            const minutes = parseFloat(document.getElementById('minutes').value) || 0;
            const seconds = parseFloat(document.getElementById('seconds').value) || 0;
            
            // 计算总秒数
            const totalSeconds = hours * 3600 + minutes * 60 + seconds;
            
            // 计算周天数量（每8秒一个周天）
            const cycles = totalSeconds / 8;
            
            // 计算总经验值
            const totalExp = cycles * customExp;
            
            // 显示结果（保留2位小数）
            document.getElementById('totalExp').textContent = totalExp.toFixed(2);
            
            // 更新目标经验值输入框
            document.getElementById('targetExp').value = totalExp.toFixed(2);
            
            // 计算并显示所需时间
            calculateTimeFromExp();
        }
        
        // 根据经验值计算所需时间
        function calculateTimeFromExp() {
            const customExp = parseFloat(document.getElementById('customExp').value) || 1.00;
            const targetExp = parseFloat(document.getElementById('targetExp').value) || 0;
            
            if (targetExp <= 0) {
                document.getElementById('requiredTime').textContent = "0小時 0分鐘 0秒";
                return;
            }
            
            // 计算需要的周天数量
            const cycles = targetExp / customExp;
            
            // 计算总秒数
            const totalSeconds = cycles * 8;
            
            // 转换为小时、分钟、秒
            const hours = Math.floor(totalSeconds / 3600);
            const remainingSecondsAfterHours = totalSeconds % 3600;
            const minutes = Math.floor(remainingSecondsAfterHours / 60);
            const seconds = Math.floor(remainingSecondsAfterHours % 60);
            
            // 显示结果
            document.getElementById('requiredTime').textContent = 
                `${hours}小時 ${minutes}分鐘 ${seconds}秒`;
        }
        
        // 从经验值更新到时间
        function updateTimeFromExp() {
            calculateTimeFromExp();
            
            // 根据目标经验值反向计算时间
            const customExp = parseFloat(document.getElementById('customExp').value) || 1.00;
            const targetExp = parseFloat(document.getElementById('targetExp').value) || 0;
            
            if (targetExp <= 0) {
                return;
            }
            
            // 计算需要的周天数量
            const cycles = targetExp / customExp;
            
            // 计算总秒数
            const totalSeconds = cycles * 8;
            
            // 转换为小时、分钟、秒
            const hours = Math.floor(totalSeconds / 3600);
            const remainingSecondsAfterHours = totalSeconds % 3600;
            const minutes = Math.floor(remainingSecondsAfterHours / 60);
            const seconds = Math.floor(remainingSecondsAfterHours % 60);
            
            // 更新时间输入框
            document.getElementById('hours').value = hours;
            document.getElementById('minutes').value = minutes;
            document.getElementById('seconds').value = seconds;
        }
        
        // 更新所有计算
        function updateAllCalculations() {
            updateConversionRules();
            calculateExpFromTime();
        }
        
        // 初始化页面
        window.onload = function() {
            // 设置初始值为带两位小数的格式
            document.getElementById('customExp').value = "1.00";
            document.getElementById('targetExp').value = "0.00";
            
            updateAllCalculations();
        };
    </script>
</body>
